configuration {
    font:                    "Roboto Medium 11";
    show-icons:              true;
    icon-theme:              "Papirus";
    disable-history:         true;
    fullscreen:              false;
    hide-scrollbar:          true;
    sidebar-mode:            false;
    display-window:          "";
    window-format :          "{t}";
    window-thumbnail:        false;
}

/* Dark */

* {
    background: argb:80202124;
    background-alt: argb:00202124;
    background-bar: #fff2f225;
    foreground: #f8f8f2;
    foreground-alt: #000000;
    accent: #44475a;
    border: #bd93f9;
    selected: argb:1Af8f8f2;
}
