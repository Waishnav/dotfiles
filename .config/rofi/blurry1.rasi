configuration {
    font:			                "Noto Sans:style=Bold 10";
    show-icons:                     true;
    icon-theme: 		            "Papirus";
    display-drun:	                "";
    drun-display-format:            "{name}";
    disable-history:                true;
    fullscreen:                     false;
    hide-scrollbar: 	            true;
    sidebar-mode: 		            false;
}

