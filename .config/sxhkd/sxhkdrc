#  ------ programs  -------- #
super + space
    rofi -show drun

alt + tab
    rofi -show window

alt + {v+s, t, b, f, n, o, g, s, d, i, z}
  {code, kitty, brave, nemo, notion-app, obs, gimp, spotify, discord, inkscape, zoom}

# reload config (bspwmrc and sxhkdrc)  #

super + ctrl + r
	pkill -USR1 -x sxhkd && bspc wm -r

#  ------ brightness  -------- #

XF86MonBrightnessUp
    brightnessctl s 1000+

XF86MonBrightnessDown
    brightnessctl s 1000-

#  ------------ bspwm hotkeys ------------ #

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + w
	bspc node -c

# switch to tall layout
super + shift + t
        bsp-layout set tall

# switch to wide layout
super + shift + w
        bsp-layout set wide

super + shift + d
        bsp-layout set default

# set the window state
super + {t,f}
	bspc node -t {tiled,floating}

super + ctrl + f
        bspc node -t fullscreen
# it make every window stack on top of each other
super + shift + a
        bspc desktop -l next

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
# swap the window in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {1-9}
	bspc desktop -f {1-9}
super + alt + {1-9}
    bspc node -d {1-9}
#send window to selected desktop
alt + 1
        bspc node -d 1 && bspc desktop -f 1
alt + 2
        bspc node -d 2 && bspc desktop -f 2
alt + 3
        bspc node -d 3 && bspc desktop -f 3
alt + 4
        bspc node -d 4 && bspc desktop -f 4
alt + 5
        bspc node -d 5 && bspc desktop -f 5
alt + 6
        bspc node -d 6 && bspc desktop -f 6
alt + 7
        bspc node -d 7 && bspc desktop -f 7
alt + 8
        bspc node -d 8 && bspc desktop -f 8
alt + 9
        bspc node -d 9 && bspc desktop -f 9

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# move/resize
# expand a window by moving one of its side outward
#super + alt + {h,j,k,l}
    #bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
#super + alt + shift + {h,j,k,l}
#	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}



# -------------- take screenshots ------------- #


#fullscreen screenshot save

super + shift + p
     maim "~/Pictures/$(date)"

#cropped save
super + shift + x
      maim --select "~/Pictures/$(date)"

#  clipboard fullscreen
super + u
     maim | xclip -selection clipboard -t image/png

# clipboard cropped
super + shift + u
    maim --select -o | xclip -selection clipboard -t image/png

